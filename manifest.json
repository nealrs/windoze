{
  "manifest_version": 3,
  "name": "Windoze",
  "version": "1.0",
  "description": "Displays open windows, tab groups, and tabs in a persistent sidebar.",
  "permissions": [
    "tabs",
    "tabGroups",
    "sidePanel",
    "storage"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Windoze"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
